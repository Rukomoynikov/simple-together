<div data-controller="projects-list-component--projects-list-component">
    <% @projects.each do |project| %>
        <turbo-frame id="<%= dom_id(project) %>">

          <%= link_to project,
                      data: { turbo_frame: "_top", turbo_action: "advance" } do %>
            <div class="mb-2 p-4 bg-slate-100 rounded dark:bg-gray-800 dark:border-gray-700">
              <p class="dark:text-white"><%= project.title %></p>
              <p class="dark:text-slate-400"><%= project.description %></p>
            </div>
          <% end %>
        </turbo-frame>
    <% end %>
</div>
