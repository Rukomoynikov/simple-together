<div class="grid grid-gap gap-x-6 mt-10 sm:grid-cols-1 lg:grid-cols-[300px_auto]">
    <%= turbo_frame_tag "sidebar_block" do %>
      <div>
        <div>
          <turbo-frame id="new_project">
            <%= link_to 'Create project', new_project_path,
                        data: { turbo_frame: "new_project" },
                        class: 'block text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700 mb-5' %>
          </turbo-frame>
        </div>

        <%= turbo_frame_tag "projects_list" do %>
          <%= render ProjectsListComponent.new(projects: @projects) %>
        <% end %>
      </div>
    <% end %>

    <%= turbo_frame_tag "content_block" do %>
      <div class="hidden lg:block">
        <%= render CommentsListComponent.new(comments: @recent_comments,
                                             title: 'Recent comments from all projects',
                                             show_project_link: true) %>
      </div>
    <% end %>
</div>
