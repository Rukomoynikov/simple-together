<%= turbo_frame_tag "sidebar" do %>
  <h3><%= @project.title %></h3>
  <p><%= @project.description %></p>

  <%= turbo_frame_tag "comment_form" do %>
      <%= render CommentFormComponent.new(comment: @comment) %>
  <% end %>

  <%= turbo_frame_tag "comments_list" do %>
      <h4 class='basis-2'>Comments</h4>
      <%= render CommentsListComponent.new(comments: @project.comments) %>
  <% end %>
<% end %>
